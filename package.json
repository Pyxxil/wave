        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.2",
        "prettier": "2.0.5",
        "pretty-quick": "^2.0.1",
        "react-app-rewired": "^2.1.6",
        "typescript": "^3.8.3",
        "wasm-loader": "^1.3.0"
