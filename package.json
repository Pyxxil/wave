        "typeface-roboto": "^0.0.75",
        "typeface-roboto-mono": "^0.0.75",
        "uuid": "^8.0.0"
    },
    "resolutions": {
        "core-js": "^3.0.0",
        "source-map-resolve": "^0.6.0",
        "chokidar": "^3.0.0"
    },
    "scripts": {
        "start": "wasm-pack build lib && cd lib/pkg && yarn link && cd ../.. && yarn link wave && react-app-rewired start",
        "build": "wasm-pack build --release lib && cd lib/pkg && yarn link && cd ../.. && yarn link wave && react-app-rewired build",
        "test": "wasm-pack build lib && cd lib/pkg && yarn link && cd ../.. && yarn link wave && react-app-rewired test --passWithNoTests"
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx,json}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/body-scroll-lock": "^2.6.1",
        "@types/jest": "^24.0.0",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/lodash.debounce": "^4.0.6",
        "@types/node": "^12.0.0",
