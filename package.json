        "lodash.clonedeep": "^4.5.0",
        "lodash.debounce": "^4.0.8",
        "node-sass": "^4.14.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-scripts": "3.4.1",
        "react-timeout": "^1.2.0",
        "redux-persist": "^6.0.0",
        "redux-thunk": "^2.3.0",
